{
    "name": "hpt-pc-assistant",
    "version": "1.0.0",
    "description": "HPT PC Assistant",
    "publisher": "HPT",
    "main": "dist-electron/main.js",
    "homepage": "./",
    "type": "module",
    "scripts": {
        "build": "tsc && vite build",
        "build:electron": "tsc -p electron/tsconfig.main.json && tsc -p electron/tsconfig.preload.json",
        "build:exe": "npm run build && npm run build:electron && npx electron-builder --win --config.forceCodeSigning=false",
        "dev": "vite",
        "dev:electron": "npm run build:electron && set NODE_ENV=development && electron .",
        "start": "electron .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "auto-launch": "^5.0.6",
        "axios": "^1.13.0",
        "clsx": "^2.1.1",
        "date-fns": "^3.6.0",
        "i18next": "^25.6.0",
        "lucide-react": "^0.446.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hot-toast": "^2.6.0",
        "react-i18next": "^16.2.1",
        "react-markdown": "^10.1.0",
        "react-router-dom": "^7.9.4",
        "rehype-highlight": "^7.0.2",
        "rehype-raw": "^7.0.0",
        "remark-gfm": "^4.0.1",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@types/auto-launch": "^5.0.5",
        "@types/react": "^18.3.8",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.20",
        "electron": "^32.0.1",
        "electron-builder": "^25.0.5",
        "eslint": "^9.10.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.12",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.12",
        "typescript": "^5.6.2",
        "vite": "^5.4.7"
    },
    "author": "HPT HSE R&D",
    "license": "MIT",
    "build": {
        "appId": "com.hpt.pc-assistant",
        "productName": "HPT PC Assistant",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "public/logo/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "public/logo/build-icon.ico",
            "executableName": "HPT PC Assistant"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "HPT PC Assistant"
        },
        "forceCodeSigning": false
    }
}